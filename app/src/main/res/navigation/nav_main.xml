<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/bookSearchFragment"
    >

    <fragment
        android:id="@+id/bookSearchFragment"
        android:name="com.example.searchbook.book.BookSearchFragment"
        android:label="bookSearchFragment"
        >
        <action
            android:id="@+id/action_bookSearchFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
        <action
            android:id="@+id/action_bookSearchFragment_to_bookMarkingBookFragment"
            app:destination="@id/bookMarkingBookFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.searchbook.book.BookDetailFragment"
        android:label="BookDetailFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        >
        <argument
            android:name="book"
            app:argType="com.example.searchbook.domain.BookUiModel$Book"
            />
    </fragment>
    <fragment
        android:id="@+id/bookMarkingBookFragment"
        android:name="com.example.searchbook.book.BookMarkingBookFragment"
        android:label="BookMarkingBookFragment"
        />
</navigation>